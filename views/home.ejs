<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <%- include ('./includes/navbar') -%>
    <section class="postsBox">
      <% if(!isLogin) { %>
      <div>
        <button><a href="/login">Login</a></button>
        <button><a href="/register">Register</a></button>
      </div>
      <% } else { %>
      <div>
        <form style="display: inline-block" action="/logout" method="post">
          <button type="submit">Logout</button>
        </form>
        <button>
          <a href="/admin/addPost">Create Post as <%= currentUser %></a>
        </button>
      </div>
      <% } %>
      <h2 style="text-align: center">Posts</h2>
      <div>
        <% if(postsArr.length === 0 && isLogin) { %>
        <div class="postBox">
          <div>
            <p>There is no posts to see</p>
            <p>You can start create your own post!!</p>
          </div>
          <button>
            <a href="/admin/addPost">Create new Post</a>
          </button>
        </div>
        <% } %> <% for(let post of postsArr) { %>
        <div class="postBox">
          <img src="<%= post.imageUrl %>" alt="post image" />
          <div class="titlebox">
            <p style="font-size: 20px; font-weight: bold"><%= post.title %></p>
            <p>Post by <%= post.userId.email %></p>
            <button><a href="/post/<%= post._id %>">See more</a></button>
          </div>
        </div>
        <% } %>
      </div>
    </section>
  </body>
</html>
